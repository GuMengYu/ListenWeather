<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_details_wind"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/container_details_wind_icon"
        android:src="@drawable/ic_wind"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/material_icon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container_details_wind_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/container_details_wind_icon"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textSize="@dimen/title_text_size"
        android:text="北风(实时南风)"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/container_details_wind_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/container_details_wind_icon"
        android:layout_below="@id/container_details_wind_title"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
         android:lineSpacingMultiplier="1.3"
        android:text="3-4 级(实时3级)"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>