<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ling.listenweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     e">
        <activity
            android:name=".Activity.MainActivity"
            android:label="听说天气"
             android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.BaseActivity" />
        <activity
            android:name=".Activity.CityManageActivity"
            android:label="@string/title_activity_city_manage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ling.listenweather.Activity.BaseActivity" />
        </activity>
        <activity android:name=".Activity.SearchCityActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ling.listenweather.Activity.BaseActivity" />
        </activity>
        <activity
            android:name=".Activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>